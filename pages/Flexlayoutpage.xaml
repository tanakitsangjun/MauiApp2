<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.pages.Flexlayoutpage"
             Title="Flexlayoutpage">
       <FlexLayout Direction="Column" JustifyContent="Center" AlignItems="Center">
         <Border Stroke="White" Padding="50">
            
         </Border>
         <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Blue"
                   Stroke="white"
                   StrokeThickness="10"
                   >
        </Rectangle>
         <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Purple">
        </Rectangle>
         <Rectangle WidthRequest="100"
                   HeightRequest="100"
                   BackgroundColor="Red">
        </Rectangle>

       </FlexLayout>
</ContentPage>